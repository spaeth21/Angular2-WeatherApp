{
  "compilerOptions": {
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "es5",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs"
  },
  "exclude": [
    "node_modules",
    "typings",
    "wwwroot"
  ],
  "compileOnSave": true,
  "buildOnSave": false
}
